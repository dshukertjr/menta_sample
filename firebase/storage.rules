service firebase.storage {
  match /b/{bucket}/o {
  
  	match /posts/{userId}/{postId}/{fileName} {
    	allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }
    
    match /users/{userId}/{fileName} {
    	allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }
  }
}
